<%= form_with model: @question, local: true do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: "form_control", :size=>"40"%>
  </div>
    
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: "form_control", :size=>"40" %>
  </div>
    
  <div class="form-group">
    <label>Content</label>
    <%= f.text_area :content, class: "form_control", :size=>"40" %>
  </div>
    
  <div class="text-center">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>